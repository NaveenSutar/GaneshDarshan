<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_weight="1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        app:cardCornerRadius="0.5dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pgimg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/home_hero"
                tools:ignore="ContentDescription,RtlHardcoded" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="-35dp"
                android:background="#65000000"
                android:paddingLeft="5dp"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:layout_gravity="center_vertical"
                android:paddingBottom="2dp"
                tools:ignore="RtlSymmetry">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pgsharedby"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shared By"
                        android:layout_gravity="center_vertical"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#ffffff"
                        tools:ignore="HardcodedText,RtlHardcoded" />

                    <TextView
                        android:id="@+id/pgplacename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Place"
                        android:layout_marginTop="-2dp"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        tools:ignore="HardcodedText,RtlHardcoded" />
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/pgcaption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:layout_marginBottom="1dp"
                android:text="Ganesha Festival Preparation at our place Ganesha Festival Preparation at our place Ganesha Festival Preparation at our"
                android:layout_marginStart="5dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>