<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.darshangroups.ganeshdarshan">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <application
        android:name=".Categories.HomeGanesha.Adapter.HomeGaneshaVollyInit"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="InnerclassSeparator">

        <activity android:name=".Intros.SplashActivity"
            tools:ignore="InnerclassSeparator">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Intros.IntroActivity" android:label="Intro" tools:ignore="InnerclassSeparator"/>

        <activity android:name=".HomeActivity" android:configChanges="orientation" android:screenOrientation="portrait" android:label="@string/title_activity_welcome"/>

        <activity android:name=".Categories.SarvajanikGanesha.SarvajanikActivity" android:label="Sarvajanik" tools:ignore="InnerclassSeparator" />

        <activity android:name=".Categories.PreparationGanesha.PreparationActivity" android:label="Preparation" tools:ignore="InnerclassSeparator" />

        <activity android:name=".Categories.SarvajanikGanesha.SarvaImagesActivity" android:label="Sarvajanik Images" tools:ignore="InnerclassSeparator" />

        <activity android:name=".Categories.HomeGanesha.Details.HomeGaneshaSwipeActivity" android:label="Home Ganesha Images" tools:ignore="InnerclassSeparator" />

        <activity android:name=".Categories.PreparationGanesha.Details.GaneshaPreparationImageFragment" android:label="Home Ganesha Images" tools:ignore="InnerclassSeparator" />

        <activity android:name=".Categories.HomeGanesha.HomeganeshActivity"
            android:label="@string/toolbar_title"
            android:theme="@style/AppThemeBar">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
    </application>
</manifest>